extends ../../layout

block content

	.page-header
		h1 User List

	.row: .col-md-12

		table.table.table-striped.table-hover

			thead: tr
				th Username
				th View

		if !users
			tr: td(colspan=2) No users found in the database! Something's not right.

		each user in users
			tr
				td #{user.username}
				td: a.btn.btn-primary(href='/admin/user/view/#{user.id}')
					span.glyphicon.glyphicon-play
