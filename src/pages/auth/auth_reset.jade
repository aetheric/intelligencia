extends ../layout

block content

	.row: .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
		.page-header
			h1 Password Reset
		p
			| If you have performed a password recovery, and have the relevant reset code to hand, this is the form
			| for you to fill out. If not, you're probably looking for the recovery form, available
			| <a href="/auth/recover">here</a>.

	.row: .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
		form(role='form', method='post')

			.form-group
				label.control-label(for='email')
					| Email Address
				input#email.form-control(
					type='email',
					name='email',
					placeholder='email@somewhere.com',
					value=email,
					autofocus=( !email ),
					required=true
				)

			.form-group
				label.control-label(for='code')
					| Recovery Code
				input#code.form-control(
					type='text',
					name='code',
					placeholder='pumpernickle',
					value=code,
					autofocus=( email && !code ),
					required=true
				)

			.form-group
				label.control-label(for='password1')
					| New Password
				input#password1.form-control(
					type='password',
					name='password1',
					autofocus=( email && code ),
					required=true
				)

			.form-group
				label.control-label(for='password2')
					| New Password
				input#password1.form-control(
					type='password',
					name='password2',
					required=true
				)

			.form-group
				button.btn.btn-success.pull-right(type='submit')
					| Send Recovery Email
