extends ../layout

block content

	.row: .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
		.page-header
			h1 Password Recovery

	.row

		.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
			form(role='form', method='post')

				.form-group
					label.control-label(for='email')
						| Email Address
					input#email.form-control(
						type='email',
						name='email',
						placeholder='email@somewhere.com',
						value=email,
						autofocus=true,
						required=true
					)

				.form-group
					button.btn.btn-success.pull-right(type='submit')
						| Send Recovery Email