extends ../../layout

block content

	.page-header
		h1 Document List

	.row
		.col-md-12

			table.table.table-striped.table-hover

				thead: tr
					th Title
					th Author
					th Clearance
					th Edited
					th View

				each doc in docs
					tr
						td #{doc.title}
						td #{doc.author}
						td
							each value, key in doc.clearance
								span #{key}:#{value}
						td #{doc.edited}
						td: a.btn.btn-primary(href='/app/doc/view/#{doc._id}')
							span.glyphicon.glyphicon-play
