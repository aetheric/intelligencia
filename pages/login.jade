extends layout

mixin input(id, type, help, value)
	- var val = value ? value : '';
	input(id='#{id}', name='#{id}', type='#{type}', placeholder='#{help}', value='#{val}')

block content

	.page-title.row
		.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
			h1 Sign-in

	if error
		.alert.alert-danger
			button.close(type='button', data-dismiss='alert', aria-hidden='true') &times;
			strong There was an error in your submission
			case error
				when 'user'
					p You forgot to enter your username.
				when 'pass'
					p You forgot to enter your password.
				when 'cred'
					p.
						The login credentials you provided can't be found.
						Did you misspell something? Have you
						<a href="/register?user=#{user}">registered</a>?

	.row

		.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.well
			form.form-horizontal(role='form', method='post')

				.form-group
					label.control-label.col-sm-3(for='username') Username
					.col-sm-9
						+input('username', 'text', 'Dalaraxis', user)

				.form-group
					label.control-label.col-sm-3(for='password') Password
					.col-sm-9
						+input('password', 'password', 'iamthelichking', null)

				.form-group
					.col-sm-offset-3.col-sm-9
						button.btn.btn-success(type='submit') Sign-in
